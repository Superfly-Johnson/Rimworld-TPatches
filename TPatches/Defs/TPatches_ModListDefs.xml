<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <XmlExtensions.PatchDef Name="carnap2TPatchesModList" Abstract="True">
        <parameters>
            <li>mod</li>
        </parameters>
        <apply>
            <Operation Class="PatchOperationFindMod">
                <mods>
                    <li>{mod}</li>
                </mods>
                <match Class="PatchOperationConditional">
                    <xpath>/Defs/XmlExtensions.SettingsMenuDef/settings/li/tabs/li[label="Info"]/settings/li[text="{mod}"]</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <order>Append</order>
                        <xpath>/Defs/XmlExtensions.SettingsMenuDef/settings/li/tabs/li[label="Info"]/settings</xpath>
                        <value>
                            <li Class="XmlExtensions.Setting.Text">
                                <font>Tiny</font>
                                <text>{mod}</text>
                            </li>
                            <li Class="XmlExtensions.Setting.SetColor">
                                <color>(255,255,255)</color>
                            </li>
                        </value>
                    </nomatch>
                </match>
                <nomatch Class="PatchOperationConditional">
                    <xpath>/Defs/XmlExtensions.SettingsMenuDef/settings/li/tabs/li[label="Info"]/settings/li[text="{mod}"]</xpath>
                    <nomatch Class="PatchOperationAdd">
                        <order>Append</order>
                        <xpath>/Defs/XmlExtensions.SettingsMenuDef/settings/li/tabs/li[label="Info"]/settings</xpath>
                        <value>
                            <li Class="XmlExtensions.Setting.SetColor">
                                <color>(155,155,155)</color>
                            </li>
                            <li Class="XmlExtensions.Setting.Text">
                                <font>Tiny</font>
                                <text>{mod}</text>
                            </li>
                            <li Class="XmlExtensions.Setting.SetColor">
                                <color>(255,255,255)</color>
                            </li>
                        </value>
                    </nomatch>
                </nomatch>
            </Operation>
        </apply>
    </XmlExtensions.PatchDef>
</Defs>
